class Solution:
    def maxLen(self, arr):
        # code here
        
        n=len(arr)
        mpp={}
        maxi=0
        sm=0
        
        for i in range(n):
            sm+=arr[i]
            if sm==0:
                maxi=i+1
            else:
                if sm in mpp:
                    maxi=max(maxi,i-mpp[sm])
                else:
                    mpp[sm]=i
        return maxi
        
        
        
